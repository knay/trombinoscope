<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Noir" >
		
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/fond_accueil">
    
        <LinearLayout
    		    android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:background="@drawable/fond_logo_accueil"
            android:gravity="center_vertical|right">
            <ImageView
                android:src="@drawable/logo_accueil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"/>	
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.4"
            android:layout_marginTop="10sp"
            android:padding="2sp"
            android:gravity="bottom"
            android:background="@color/Noir"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:background="@drawable/fond_defilement_accueil"
                android:orientation="horizontal">
                <ImageView 
                    android:src="@drawable/photo1"
                    android:id="@+id/photoAnimAccueil1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"/>
                 <ImageView 
                    android:src="@drawable/photo2"
                    android:id="@+id/photoAnimAccueil2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"/>
                 <ImageView 
                    android:src="@drawable/photo3"
                    android:id="@+id/photoAnimAccueil3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"/>
            </LinearLayout>
        </LinearLayout>
    		
        
       	<LinearLayout
       	    android:layout_width="fill_parent"
       	    android:layout_height="0sp"
            android:layout_weight="0.33"
            android:layout_marginTop="15sp"
            android:gravity="center_vertical|left"
       	    android:orientation="horizontal">
            <Button
                android:id="@+id/ViewListe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="@string/liste"
                android:background="@drawable/fond_btn_gauche_accueil"
                android:width="250dp"
                android:height="30dp"
                android:layout_marginBottom="20dp"/>
            
            <ImageView 
                android:layout_marginLeft="-40sp"
                android:layout_marginTop="-20sp"
                android:src="@drawable/liste"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:height="20sp"
                android:contentDescription="@string/app_name"/>
        </LinearLayout> 
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.33"
            android:gravity="center_vertical|right"
            android:orientation="vertical">
            <Button
                android:id="@+id/ViewTrombi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trombi"
                android:background="@drawable/fond_btn_droit_accueil"
                android:width="250dp"
                android:layout_marginBottom="20dp"/>
    	    
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.33"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_quitter_appli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quitter_str"
                android:background="@drawable/fond_btn_gauche_accueil"
                android:width="250dp"
                android:layout_marginBottom="20dp"/>
            
            <ImageView 
                android:layout_marginLeft="-40sp"
                android:layout_marginTop="-21sp"
                android:src="@drawable/quitter"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:height="20sp"
                android:contentDescription="@string/app_name"/>
            
        </LinearLayout>
	   
    </LinearLayout>
		
</LinearLayout>
